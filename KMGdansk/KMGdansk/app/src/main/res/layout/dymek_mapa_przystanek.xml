<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_bubble"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bubble_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/map_bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/bubble_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:maxEms="17"
            android:text="Przystanek nazwa"
            android:textColor="#000000" />

        <GridLayout
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:id="@+id/bubble_freebikes_logo"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/bus80" />

            <TextView
                android:id="@+id/bubble_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-40dp"
                android:maxEms="17"
                android:text="Linie"
                android:textColor="#000000"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/bubble_subdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="17"
                android:text="najbliższe odjazdy"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="visible" />


        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2">
            <ImageView
                android:id="@+id/delay_watch"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_delay_watch" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:maxEms="17"
                android:text="18:48"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
            android:id="@+id/bubble_subdescription_delay"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="17"
            android:text="+2"
            android:textColor="#ff0000"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/bubble_subdescription_kierunek"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="17"
                android:text="Kołłątaja"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bubble_subdescription_pojazd"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="17"
                android:text="527"
                android:textColor="#000000"
                android:textSize="14sp" />

        </GridLayout>
    </LinearLayout>
</LinearLayout>